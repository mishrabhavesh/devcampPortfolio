<h1> Portfolio page</h1>

<%= link_to "create new portfolio",new_portfolio_path %>

<% @portfolio_items.each do |portfolio_item| %>
<p><%= portfolio_item.title  %> </p>
<p><%= portfolio_item.subtitle  %> </p>
<p><%= portfolio_item.body  %> </p>
<p><%= image_tag portfolio_item.thumb_image unless  portfolio_item.thumb_image.nil? %> </p>
<%= link_to "Edit portfolio",edit_portfolio_path(portfolio_item.id) %>
<%= link_to "Delete",portfolio_path(portfolio_item.id),method: :delete, data: {confirm: "are you sure you want to delete?"} %>

<% end %> 